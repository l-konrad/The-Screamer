# EditorConfig: https://EditorConfig.org
root = true

[*]
encoding = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Our C code rules
[*.{c,h}]
indent_style = tab
tab_width = 4
indent_size = 4
max_line_length = 80
curly_bracket_next_line = false
indent_brace_style = K&R

# NuttX C code rules
[/nuttx/**.{c,h}]
indent_style = space
indent_size = 2
max_line_length = 78
curly_bracket_next_line = true
indent_brace_style = GNU

[Makefile]
indent_style = tab
[Make.defs]
indent_style = tab
[Kconfig]
indent_style = tab

[{meson.build,meson_options.txt}]
indent_style  = space
indent_size = 2
max_line_length = 80

[*.sh]
indent_style = tab
max_line_length = 80

[.gitlab-ci.yml]
indent_style  = space
indent_size = 2

[*.nix]
indent_style = space
indent_size = 2

[*.{diff,patch}]
# Avoid to trim trailing whitespace
trim_trailing_whitespace = false
